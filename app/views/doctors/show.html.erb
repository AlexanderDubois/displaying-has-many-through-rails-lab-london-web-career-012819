<h1><%= @doctor.name %></h1>
<h2>Department: <%= @doctor.name %></h2>

<h2>Appointments:</h2>
<ul>
  <% @doctor.appointments.each do |appointment|%>
    <li>Patient name: <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
    <li>Date: <%= appointment.time%></li>
  <% end %>
</ul>
